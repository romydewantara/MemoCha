<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.memocha">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.memocha.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.memocha.HistoryDetailsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.memocha.HistoryActivity"
            android:exported="false" />
        <activity
            android:name="com.example.memocha.ScheduleActivity"
            android:exported="false" />
        <activity
            android:name="com.example.memocha.WebViewActivity"
            android:exported="false" />
        <activity
            android:name="com.example.memocha.DashboardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.memocha.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>