<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewReset"
        style="@style/TextRegularGrey14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:background="?android:selectableItemBackground"
        android:enabled="false"
        android:padding="6dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="@id/textViewLanguageTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewLanguageTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLanguageTitle"
        style="@style/TextBoldBlack18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Application Language"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewLanguage"
        style="@style/TextRegularBlack14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="?android:selectableItemBackground"
        android:paddingStart="15dp"
        android:paddingTop="12dp"
        android:paddingEnd="15dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:text="English (United States)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLanguageTitle" />

    <View
        android:id="@+id/lineLanguage"
        android:layout_width="match_parent"
        android:layout_height=".7dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/pewter"
        app:layout_constraintTop_toBottomOf="@id/textViewLanguage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAnimation"
        style="@style/TextRegularBlack14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Background Animation"
        app:layout_constraintBottom_toBottomOf="@id/animationOnOff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/animationOnOff" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/animationOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:thumb="@drawable/selector_custom_thumb"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lineLanguage"
        app:showText="false"
        app:track="@drawable/selector_custom_track" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutAnimationSelection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        app:layout_constraintHeight_percent=".2"
        app:layout_constraintTop_toBottomOf="@id/animationOnOff">

        <LinearLayout
            android:id="@+id/linearDashboardBackgroundName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextRegularBlack14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Autumn" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".7dp"
                android:background="@color/pewter" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextRegularBlack14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Sakura" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".7dp"
                android:background="@color/pewter" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextRegularBlack14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Snow" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".7dp"
                android:background="@color/pewter" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextRegularBlack14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Summer" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".7dp"
                android:background="@color/pewter" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="9"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/radioButtonAutumn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="@color/teal_dark"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioButtonSakura"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="@color/teal_dark"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioButtonSnow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="@color/teal_dark"
                android:checked="false" />

            <RadioButton
                android:id="@+id/radioButtonSummer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="@color/teal_dark"
                android:checked="false" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewApply"
        style="@style/TextBoldWhite16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background_button_save_disabled"
        android:paddingLeft="30dp"
        android:paddingTop="12dp"
        android:paddingRight="30dp"
        android:paddingBottom="12dp"
        android:text="Apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>