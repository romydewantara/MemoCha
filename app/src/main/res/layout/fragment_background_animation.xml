<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BackgroundAnimationFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSettingAnimation"
        style="@style/TextBoldTealDark18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/settings_background_animation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBackgroundAnimation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintHeight_percent=".07"
        app:layout_constraintTop_toBottomOf="@id/textViewSettingAnimation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewAnimation"
                style="@style/TextRegularBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/settings_background_animation"
                app:layout_constraintBottom_toBottomOf="@id/animationOnOff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/animationOnOff" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/animationOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:thumb="@drawable/selector_custom_thumb"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showText="false"
                app:track="@drawable/selector_custom_track" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewBackgroundAnimationInfo"
        style="@style/TextRegularGrey12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/settings_background_animation_information"
        app:layout_constraintLeft_toLeftOf="@id/cardViewBackgroundAnimation"
        app:layout_constraintRight_toRightOf="@id/cardViewBackgroundAnimation"
        app:layout_constraintTop_toBottomOf="@id/cardViewBackgroundAnimation" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSelectorAnimation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintHeight_percent=".23"
        app:layout_constraintTop_toBottomOf="@id/textViewBackgroundAnimationInfo"
        app:layout_goneMarginTop="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardViewBackgroundAnimation">

            <LinearLayout
                android:id="@+id/linearDashboardBackgroundName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextRegularBlack14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/settings_theme_autumn" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".7dp"
                    android:background="@color/pewter" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextRegularBlack14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/settings_theme_sakura" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".7dp"
                    android:background="@color/pewter" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextRegularBlack14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/settings_theme_snow" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".7dp"
                    android:background="@color/pewter" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextRegularBlack14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/settings_theme_summer" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".7dp"
                    android:background="@color/pewter" />

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/radioButtonAutumn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:buttonTint="@color/teal"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioButtonSakura"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:buttonTint="@color/teal"
                    android:checked="false" />

                <RadioButton
                    android:id="@+id/radioButtonSnow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:buttonTint="@color/teal"
                    android:checked="false" />

                <RadioButton
                    android:id="@+id/radioButtonSummer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:buttonTint="@color/teal"
                    android:checked="false" />

            </RadioGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBackgroundMusic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintHeight_percent=".07"
        app:layout_constraintTop_toBottomOf="@id/cardViewSelectorAnimation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewBackgroundMusic"
                style="@style/TextRegularBlack14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/settings_music"
                app:layout_constraintBottom_toBottomOf="@id/backgroundMusicOnOff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/backgroundMusicOnOff" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/backgroundMusicOnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:thumb="@drawable/selector_custom_thumb"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:showText="false"
                app:track="@drawable/selector_custom_track" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMusicInfo"
        style="@style/TextRegularGrey12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/settings_music_information"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/cardViewBackgroundMusic"
        app:layout_constraintRight_toRightOf="@id/cardViewBackgroundMusic"
        app:layout_constraintTop_toBottomOf="@id/cardViewBackgroundMusic" />
</androidx.constraintlayout.widget.ConstraintLayout>