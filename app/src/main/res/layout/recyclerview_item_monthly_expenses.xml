<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutItemExpenses"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingLeft="12dp"
    android:paddingTop="9dp"
    android:paddingRight="12dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDate"
        style="@style/TextRegularDarkGrey14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01 Sep 2022"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewTime"
        style="@style/TextRegularGrey14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="00:00"
        app:layout_constraintLeft_toRightOf="@id/textViewDate"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewEdited"
        style="@style/TextRegularGrey14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/history_edited_text"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/textViewTime"
        app:layout_constraintLeft_toRightOf="@id/textViewTime"
        app:layout_constraintTop_toTopOf="@id/textViewTime" />

    <ImageView
        android:id="@+id/iconInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:src="@drawable/ic_info"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/textViewEdited"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toRightOf="@id/textViewEdited"
        app:layout_constraintTop_toTopOf="@id/textViewEdited"
        app:layout_constraintWidth_percent=".04" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutInfo"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintLeft_toLeftOf="@id/iconInfo"
        app:layout_constraintRight_toRightOf="@id/iconInfo"
        app:layout_constraintTop_toBottomOf="@id/iconInfo">

        <ImageView
            android:id="@+id/imageBubble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleY="-1"
            android:src="@drawable/ic_bubble_dialog" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextRegularGrey12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="17dp"
            android:text="Date Added:\n01 Sep 2022"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/imageBubble"
            app:layout_constraintLeft_toLeftOf="@id/imageBubble"
            app:layout_constraintRight_toRightOf="@id/imageBubble"
            app:layout_constraintTop_toTopOf="@id/imageBubble" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/iconMethod"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_cash"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDate"
        app:layout_constraintWidth_percent=".08" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMethod"
        style="@style/TextBoldTeal14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Cash"
        app:layout_constraintBottom_toBottomOf="@id/iconMethod"
        app:layout_constraintLeft_toRightOf="@id/iconMethod"
        app:layout_constraintTop_toTopOf="@id/iconMethod" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewAmount"
        style="@style/TextBoldBlack16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Rp 10.000"
        app:layout_constraintBottom_toBottomOf="@id/iconMethod"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iconMethod" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewGoods"
        style="@style/TextRegularBlack14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Meja"
        app:layout_constraintLeft_toRightOf="@id/iconMethod"
        app:layout_constraintTop_toBottomOf="@id/iconMethod" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDescription"
        style="@style/TextRegularGrey14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Belanja Keperluan Rumah Tangga"
        app:layout_constraintLeft_toRightOf="@id/iconMethod"
        app:layout_constraintTop_toBottomOf="@id/textViewGoods" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCategory"
        style="@style/TextRegularGrey14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Fashion"
        app:layout_constraintBottom_toTopOf="@id/textViewAmount"
        app:layout_constraintRight_toRightOf="@id/textViewAmount" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:layout_marginTop="25dp"
        android:background="@color/pewter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDescription"
        app:layout_constraintWidth_percent=".85" />

</androidx.constraintlayout.widget.ConstraintLayout>