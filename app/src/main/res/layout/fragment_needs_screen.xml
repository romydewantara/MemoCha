<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayoutNeeds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout_teal_dark">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutNeedsHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/teal_extra_dark"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewNeedsTitle"
            style="@style/LobsterTextBoldWhite24"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:text="@string/needs_title_page"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".3" />

        <View
            android:id="@+id/lineList"
            android:layout_width="0dp"
            android:layout_height=".1dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/textViewNeedsTitle"
            app:layout_constraintLeft_toRightOf="@id/textViewNeedsTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewNeedsTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewNeedsDate"
            style="@style/TextBoldWhite12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:paddingEnd="10dp"
            android:text="@string/secret_letter_calendar"
            app:layout_constraintBottom_toTopOf="@id/lineList"
            app:layout_constraintLeft_toRightOf="@id/textViewNeedsTitle"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewNeedsAmount"
            style="@style/TextBoldTealExtraLight14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:maxLines="1"
            android:text="Today\'s List: 0"
            app:layout_constraintLeft_toRightOf="@id/textViewNeedsTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineList" />

        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutNeedsFooter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_needs_footer_gradient_dark"
            android:scaleX="-1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".5" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_needs_footer_gradient_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent=".5" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/iconSend"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_button_send_needs_item"
                    android:padding="8dp"
                    android:src="@drawable/ic_send" />
            </RelativeLayout>

            <EditText
                android:id="@+id/editTextNeedsItem"
                style="@style/TextRegularWhite16"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edit_text_field_needs_item"
                android:hint="@string/needs_hint_goods"
                android:inputType="textEmailAddress"
                android:maxLines="3"
                android:maxLength="180"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:textColorHint="@color/gray_semi_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iconAddImage"
                app:layout_constraintRight_toLeftOf="@id/iconSend"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iconAddImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_add_teal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNeedsInfo"
        style="@style/TextRegularBlack14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:background="@drawable/background_needs_info_yellow"
        android:maxLines="1"
        android:text="@string/needs_notification_page"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutNeedsHeader" />

    <ScrollView
        android:id="@+id/scrollViewNeeds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/layoutNeedsFooter"
        app:layout_constraintTop_toBottomOf="@id/textViewNeedsInfo">

        <RelativeLayout
            android:id="@+id/containerNeedsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent" />

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonScrollToTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="@id/scrollViewNeeds"
        app:layout_constraintTop_toTopOf="@id/scrollViewNeeds"
        app:layout_constraintWidth_percent=".15">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_needs_text_date_teal_dark"
            android:rotation="-90"
            android:src="@drawable/ic_arrow_right_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonScrollToBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/scrollViewNeeds"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintRight_toRightOf="@id/scrollViewNeeds"
        app:layout_constraintWidth_percent=".15">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_needs_text_date_teal_dark"
            android:rotation="90"
            android:src="@drawable/ic_arrow_right_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/needsOverlayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>