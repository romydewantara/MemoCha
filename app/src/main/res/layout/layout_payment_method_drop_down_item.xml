<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageItemSelected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_cash"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textViewSpinnerItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewSpinnerItem"
        style="@style/TextRegularBlack14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/method_cash"
        app:layout_constraintBottom_toBottomOf="@id/imageItemSelected"
        app:layout_constraintLeft_toRightOf="@id/imageItemSelected"
        app:layout_constraintTop_toTopOf="@id/imageItemSelected" />

    <View
        android:id="@+id/lineBottom"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/grey_light"
        app:layout_constraintTop_toBottomOf="@id/imageItemSelected" />

</androidx.constraintlayout.widget.ConstraintLayout>